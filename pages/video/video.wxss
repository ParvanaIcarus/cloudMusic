/* pages/video/video.wxss */
.header{
  display: flex;
  padding: 10rpx;
}
.header .search{
  border: 1px solid #eee;
  flex: 1;
  border-radius: 10rpx;
  margin: 0 10rpx;
  text-align: center;
  color: #d43c33;
}
.header image{
  width: 60rpx;
  height: 60rpx;
}
.NavScroll{
  height:60rpx;
  display: flex;
}
.NavScroll .ScrollItem{
  padding:0 20rpx;
  height:100%;
  white-space: nowrap;
}
.active text{
  border-bottom: 4rpx solid red;
}

.VideoItem .MatchVideo{
  border-radius: 2%;
  width:100%;
  height:450rpx;
}
.ScrollVideo{
  height:calc(100vh - 140rpx);
  width:92%;
  padding:0 4%;
}
.VideoItem{
  margin-top:20rpx;
  width:100%;
}
.VideoItem text{
  display: block;
  width:100%;
  overflow:hidden; 
  text-overflow:ellipsis; 
  white-space:nowrap; 
}